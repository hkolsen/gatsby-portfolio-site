{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "output"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "lib": ["dom", "esnext"],
    "types": ["jest", "react", "react-icon-base", "node"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
